<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Nueva Pelicula</title>
    <style>
        .barrasup {
            text-align: center;
            line-height: 50px;
            height: 50px;
        }
        .texto{
            border: #428bca 1px solid;
            border-radius: 5px;
            width: 100%;
        }
        #form {
            border: #428bca 1px solid;
            border-radius: 5px;
            padding-top: 20px;
            margin: 20px 20px 20px 20px;
        }
        button {
            width: 100%;
        }
        h1 {
            text-align: center;
            padding-bottom: 20px;
        }
        #barrainf {
            margin-top: 10px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="row justify-content-end">
        <div class="col-md-2 barrasup"><p><%=username1%></p></div>
        <div class="col-md-2 barrasup"><a href="/../api/salir/<%=userid%>"><button class="btn btn-primary">Salir</button></a></div>
    </div>
    <div class="container" id="form">
        <div class="row">
            <div class="col-sm-12">
                <h1>Registrar Nueva Pelicula</h1>
            </div>
        </div>
<form action="/../api/nuevaPelicula" method="post">
    <div class="row">
        <div class="col-md-4">
            <label for="nombre">Nombre:</label>
        </div>
        <div class="col-md-8">
            <input type="text" id="nombre" class="texto" name="nombre" required>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label for="anioLanzamiento">AÃ±o de Lanzamiento: </label>
        </div>
        <div class="col-md-8">
            <input type="number" class="texto" id="anioLanzamiento" name="anioLanzamiento" min="1900" max="2019" required>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label for="rating">Rating (sobre 10): </label>
        </div>
        <div class="col-md-8">
            <input class="texto" type="number" id="rating" name="rating" min="0" step="0.1" max="10" required>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label for="actoresPrincipales">Actores Principales: </label>
        </div>
        <div class="col-md-8">
            <input type="text" class="texto" id="actoresPrincipales" name="actoresPrincipales" required>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label for="sinopsis">Sinopsis: </label>
        </div>
        <div class="col-md-8">
            <textarea class="texto" name="sinopsis" id="sinopsis" cols="30" rows="6" required></textarea>
        </div>
    </div>
    <div id="barrainf" class="row justify-content-end">
        <div class="col-md-2"><button class="btn btn-success">Crear</button></div>
        <div class="col-md-2"><a href="/../api/gestionPeliculas/<%=userid%>/<%=idActor%>"><button type="button" class="btn btn-primary">Cancelar</button></a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label for="idActor"></label>
            <input class="texto" type="number" id="idActor" name="idActor" value="<%=idActor%>" hidden>
            </div>
        <div class="col-md-4">
            <label for="userid"></label>
            <input class="texto" type="number" id="userid" name="userid" value="<%=userid%>" hidden>
        </div>
    </div>
    </form>
    </div>
</div>
</body>
</html>