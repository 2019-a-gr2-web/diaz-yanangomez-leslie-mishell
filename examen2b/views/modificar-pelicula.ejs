<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Nuevo Hijo</title>
    <style>
        .barrasup {
            text-align: center;
            line-height: 50px;
            height: 50px;
        }

        .texto {
            border: #428bca 1px solid;
            border-radius: 5px;
            width: 100%;
        }

        #form {
            border: #428bca 1px solid;
            border-radius: 5px;
            padding-top: 20px;
            margin: 20px 20px 20px 20px;
        }

        button {
            width: 100%;
        }

        h1 {
            text-align: center;
            padding-bottom: 20px;
        }

        #barrainf {
            margin-top: 10px;
        }
    </style>
</head>
<body onload="corre();">
<div class="container">
    <div class="row justify-content-end">
        <div class="col-md-2 barrasup"><p><%= username1 %></p></div>
        <div class="col-md-2 barrasup"><a href="/../api/salir/<%= userid %>">
                <button class="btn btn-primary">Salir</button>
            </a></div>
    </div>
    <div class="container" id="form">
        <div class="row">
            <div class="col-sm-12">
                <h1>Modificar Hijo</h1>
            </div>
        </div>
        <% const existeMensaje = mensaje1 %>
        <% if (existeMensaje) { %>
        <p style="color: red;">¡Error en Formulario! <%= mensaje1 %></p>
        <% } %>
        <form action="/../api/modificarHijo" method="post">
            <div class="row">
                <div class="col-md-4">
                    <label for="chasis">Chasis:</label>
                </div>
                <div class="col-md-8">
                    <input type="number" id="chasis" class="texto" name="chasis" value="<%= hijo.chasis %>">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label for="nombreMarca">Nombre de la Marca: </label>
                </div>
                <div class="col-md-8">
                    <input type="text" class="texto" id="nombreMarca" name="nombreMarca" value="<%= hijo.nombreMarca %>">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label for="colorUno">Primer Color: </label>
                </div>
                <div class="col-md-8">
                    <input class="texto" type="text" id="colorUno" name="colorUno" value="<%= hijo.colorUno %>">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label for="colorDos">Segundo Color: </label>
                </div>
                <div class="col-md-8">
                    <input class="texto" type="text" id="colorDos" name="colorDos" value="<%= hijo.colorDos %>">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label for="nombreModelo">Nombre del Modelo: </label>
                </div>
                <div class="col-md-8">
                    <input type="text" class="texto" id="nombreModelo" name="nombreModelo" value="<%= hijo.nombreModelo %>">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label for="anio">Año: </label>
                </div>
                <div class="col-md-8">
                    <input type="number" class="texto" name="anio" id="anio" min="1990" max="2019" value="<%= hijo.anio %>"
                           required>
                </div>
            </div>
            <div id="barrainf" class="row justify-content-end">
                <div class="col-md-2">
                    <button class="btn btn-success">Modificar</button>
                </div>
                <div class="col-md-2"><a href="/../api/gestionHijos/<%= userid %>/<%= conductorId %>">
                        <button type="button" class="btn btn-primary">Cancelar</button>
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label for="conductorId"></label>
                    <input class="texto" type="number" id="conductorId" name="conductorId" value="<%= conductorId %>"
                           hidden>
                </div>
                <div class="col-md-4">
                    <label for="userid"></label>
                    <input class="texto" type="number" id="userid" name="userid" value="<%= userid %>" hidden>
                </div>
                <div class="col-md-4">
                    <label for="autoId"></label>
                    <input class="texto" type="number" id="autoId" name="autoId" value="<%=hijo.autoId%>" hidden>
                </div>
            </div>
        </form>
    </div>
</div>
</body>
<script>
    function corre(){
        document.getElementById('chasis').disabled= true;
        document.getElementById('nombreMarca').disabled = true;
        document.getElementById('anio').disabled = true;
        document.getElementById('nombreModelo').disabled = true;
    }
</script>
</html>