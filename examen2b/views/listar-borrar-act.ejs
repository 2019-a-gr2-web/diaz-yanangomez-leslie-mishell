<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Gestionar Padres</title>
    <style>
        .barrasup {
            text-align: center;
            line-height: 50px;
            height: 50px;
        }
        .texto{
            border: #428bca 1px solid;
            border-radius: 5px;
            width: 100%;
        }
        #form {
            border: #428bca 1px solid;
            border-radius: 5px;
            padding-top: 20px;
            padding-bottom: 20px;
            margin: 20px 20px 20px 20px;
        }
        button {
            width: 100%;
        }
        h1 {
            text-align: center;
            padding-bottom: 20px;
        }
        #barrainf {
            margin-top: 10px;
        }
        tr,td,th {
            border: #428bca 1px solid;
            padding: 10px 5px;
            text-align: center;
        }
        table{
            width: 100%;
        }
        .opc{
            padding-bottom: 10px;
        }
    </style>
</head>
<body>
<%if (Number(rolid) !== 2) {%>
<div class="container">
    <div class="row justify-content-end">
        <div class="col-md-2 barrasup"><p><%=username1%></p></div>
        <% if (Number(rolid) === 1) {%>
        <div class="col-md-2 barrasup"><a href="/../api/carrito/<%=userid%>"><button class="btn btn-success">Mi Carrito</button></a></div>
        <% } %>
        <div class="col-md-2 barrasup"><a href="/../api/salir/<%=userid%>"><button class="btn btn-primary">Salir</button></a>
        </div>
    </div>
    <div class="container" id="form">
        <div class="row">
            <div class="col-lg-12">
                <h1>Gestión de Padres</h1>
            </div>
        </div>
    <div class="row">
        <div class="col-md-6"></div>
        <div class="col-md-6">
            <div class="row justify-content-end opc">
                <div class="col-sm-4"> <a href="/../api/index/<%=userid%>"><button class="btn btn-secondary">Volver</button></a>
                </div>
            </div>
        </div>
    </div>
<% if (arregloPadres1.length === 0) { %>
    <h3>No existen padres para mostrar</h3>
<% } else { %>
<div class="table-responsive">
<table>
    <tr>
        <th>Nombres</th>
        <th>Apellidos</th>
        <th>Fecha de Nacimiento</th>
        <th>Numero de Autos</th>
        <th>Licencia Válida</th>
        <th>Acciones</th>
    </tr>
    <% arregloPadres1.forEach((padre)=> { %>
    <tr>
        <td><%=padre.nombres%></td>
        <td><%=padre.apellidos%></td>
        <td><%=padre.fechaNacimiento%></td>
        <td><%=padre.numeroAutos%></td>
        <% if (padre.licenciaValida) {%>
        <td>Si</td>
        <%} else {%>
        <td>No</td>
        <% } %>
        <td>
            <a href="/../api/gestionHijos/<%=userid%>/<%=padre.conductorId%>"><button type="button" class="btn btn-primary ">Gestionar Hijos</button></a>
        </td>
        <%})%>
    </tr>
</table>
</div>
<%}%>
</div>
</div>
<% } else {%>
    <%- include('componentes/nopermitido') %>
<% } %>
</body>
</html>